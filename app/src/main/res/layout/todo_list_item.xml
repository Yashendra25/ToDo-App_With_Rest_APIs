<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/teal_200"
    android:layout_margin="15dp"
    android:id="@+id/accordian_title">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrow"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tasktitle"
            android:layout_centerVertical="true"
            android:text="padte raho"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accordian_body"
        android:padding="5dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="50dp"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/task_description"
            android:textColor="@color/white"
            android:text="Description :Pura video dekhna"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/deletbtn"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/task_description"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"

            android:layout_toLeftOf="@id/deletbtn"
            android:layout_centerVertical="true"
            android:id="@+id/editbtn"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_done_24"

            android:layout_toLeftOf="@id/editbtn"
            android:layout_centerVertical="true"
            android:id="@+id/donebtn"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>